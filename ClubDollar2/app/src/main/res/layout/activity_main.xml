<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cabelo"
    tools:context="com.paivadeveloper.clubdollar.activity.MainActivity"
    android:layout_gravity="center_vertical">

    <ImageView
        android:id="@+id/logocabelo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:srcCompat="@drawable/clubdollarlogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_cliente"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_botao"
        android:text="Sou cliente"
        android:textAllCaps="false"
        android:textColor="@color/btn_color"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/logocabelo"
        android:layout_alignEnd="@+id/logocabelo"
        android:layout_marginBottom="58dp" />

    <Button
        android:id="@+id/btn_adm"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Sou Administrador"
        android:textAllCaps="false"
        android:background="@drawable/selector_botao"
        android:textColor="@color/btn_color"
        android:layout_alignBottom="@+id/btn_cliente"
        android:layout_alignLeft="@+id/btn_cliente"
        android:layout_alignStart="@+id/btn_cliente"
        android:layout_marginBottom="69dp" />

    <Button
        android:id="@+id/promo_vai_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Button" />

</RelativeLayout>
