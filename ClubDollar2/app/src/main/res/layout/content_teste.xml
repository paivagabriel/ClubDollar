<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/fundo1">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/cinza_transparente"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include
            android:id="@+id/toolbar_teste"
            layout="@layout/toolbar" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:background="@drawable/btn_border">

        <TextView
            android:text="Mensagem Diária:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/btn_color"/>

        <TextView
            android:text="'Frase ou mensagem que queira exibir.'"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="14sp"
            android:textColor="@color/btn_color"
            android:paddingTop="10dp"/>
    </LinearLayout>

    <GridLayout
        android:id="@+id/grid_layout_teste"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:padding="12dp"
        android:columnCount="2"
        android:rowCount="3">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_cortes"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:layout_column="0" android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            card_view:cardBackgroundColor="#99FFFFFF"
            android:layout_margin="10dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardMaxElevation="4dp"
            card_view:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/corte1"
                    android:adjustViewBounds="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/sombra_item" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:layout_alignParentBottom="true"
                    android:textSize="@dimen/cv_text_size"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF"
                    android:text="Sugestões de Cortes" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_servicos"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:layout_column="1" android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            card_view:cardBackgroundColor="#99FFFFFF"
            android:layout_margin="10dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardMaxElevation="4dp"
            card_view:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/servicos1"
                    android:adjustViewBounds="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/sombra_item" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:layout_alignParentBottom="true"
                    android:textSize="@dimen/cv_text_size"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF"
                    android:text="Serviços" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_produtos"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:layout_column="0" android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            card_view:cardBackgroundColor="#99FFFFFF"
            android:layout_margin="10dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardMaxElevation="4dp"
            card_view:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/produtos1"
                    android:adjustViewBounds="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/sombra_item" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:layout_alignParentBottom="true"
                    android:textSize="@dimen/cv_text_size"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF"
                    android:text="Produtos" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_curiosidades"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:layout_column="1" android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            card_view:cardBackgroundColor="#99FFFFFF"
            android:layout_margin="10dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardMaxElevation="4dp"
            card_view:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/curiosidade1"
                    android:adjustViewBounds="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/sombra_item" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:layout_alignParentBottom="true"
                    android:textSize="@dimen/cv_text_size"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF"
                    android:text="Curiosidades" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </GridLayout>

    <LinearLayout
        android:id="@+id/ll_social"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp">

        <ImageView
            android:id="@+id/click_facebook"
            android:contentDescription="Facebook"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/facebook"/>

        <ImageView
            android:id="@+id/click_twitter"
            android:contentDescription="Twitter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/twitter"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"/>

        <ImageView
            android:id="@+id/click_instagram"
            android:contentDescription="Instagram"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/instagram"/>

    </LinearLayout>

</LinearLayout>
